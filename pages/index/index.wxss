/* pages/index/index.wxss */

/*轮播图*/

page {
  background-color: #f0f0f0;
}

.swiper {
  height: 380rpx;
}

.swiper .img {
  height: 100%;
  width: 100%;
}

/*九宫格菜单*/

.grids {
  display: flex;
  background-color: #fff;
  flex-wrap: wrap;
  border-top: 1rpx solid #ebebeb;
  border-left: 1rpx solid #ebebeb;
}

.grids .grid-item {
  display: flex;
  flex-direction: column;
  width: 33.333333333333333333%;
  height: 250rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ebebeb;
  border-right: 1rpx solid #ebebeb;
  box-sizing: border-box;
}

.grids image {
  width: 80rpx;
  height: 80rpx;
}

.grids text {
  font-size: 28rpx;
  color: #242424;
  margin-top: 20rpx;
}

/*底部*/

.links {
  display: flex;
  padding: 20rpx;
  margin: 10rpx 0;
  background-color: #fff;
  justify-content: space-around;
}

.links image {
  width: 300rpx;
  height: 150rpx;
}
